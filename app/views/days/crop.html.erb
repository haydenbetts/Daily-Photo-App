<% if false %>
  <%= image_tag @day.image.url(:large), :id => "cropbox" %>

  <%= form_for @day do |f| %>

    <% ["x", "y", "w", "h"].each do |dimension| %>

      <%= f.text_field  "crop_#{dimension}" %><br>
