<%= growing_thing.name %>

<div id="calendar">
  <%= calendar do |date| %>
    <%= date.day %>


    <% if existing_day = growing_thing.days.detect do |day| %>
        <% day.post_date == date %>
        <% end %>
      <%= link_to image_tag(existing_day.image_url(:thumb).to_s, border: 0), growing_thing_day_path(growing_thing, existing_day) %>
    <% elsif date < Date.today %>
        Cannot upload photographs for past days
    <% else %>
      <%= link_to 'Create new day', new_growing_thing_day_path(:growing_thing_id => growing_thing.id, :post_date => date) %>
    <% end %>

  <% end %>
</div>
