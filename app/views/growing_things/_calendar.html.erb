<div id="calendar">

  <%= calendar(growing_thing) do |date| %>

    <% if existing_day = growing_thing.days.detect do |day| %>
        <% day.post_date == date %>
        <% end %>
      <%= link_to image_tag(existing_day.image_url(:thumb).to_s, border: 0), growing_thing_day_path(growing_thing, existing_day) %>
    <% elsif date < Date.today %>
      <%= date.day %>

    <% else %>
      <%= date.day %>
        <div class="upload-image img-response center-block">
          <div class="hover-image">
            <%= link_to image_tag(image_url('plus_dark.png'), :style => "width:30px;height:30px", :class => "img-responsive center-block"), new_growing_thing_day_path(:growing_thing_id => growing_thing.id, :post_date => date) %>
          </div>
        </div>
    <% end %>

  <% end %>
