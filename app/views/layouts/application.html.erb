<!DOCTYPE html>
<html>
  <head>
    <title>WatchThingsGrow</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <%#= render 'devise/menu/login_items' %>
      <%#= render 'devise/menu/registration_items' %>
      <div class="navbar-header">
       <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
         <ul>
         </ul>
       </button>
     </div>

     <% if user_signed_in? %>
       <a href="<%= users_profile_path(current_user)%>" class="navbar-brand">WatchThingsGrow<span><img src="<%= image_url('sprout.png')%>" "height="30" width="30" alt="WatchThingGrow"></span></a>
     <% else %>
      <a class="navbar-brand">WatchThingsGrow<span><img src="<%= image_url('sprout.png')%>" "height="30" width="30" alt="WatchThingGrow"></span></a>
    <% end %>

     <div class="navbar-collapse collapse">
       <ul class="nav navbar-nav navbar-left">
           <%= render 'devise/menu/registration_items' %>
       </ul>
       <ul class="nav navbar-nav navbar-right">
         <%= render 'devise/menu/login_items' %>
       </ul>
    </div>

    </nav>


  <div class="container">

      <%= yield %>

  </div>

  </body>
</html>
